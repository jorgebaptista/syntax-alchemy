# Power function - recursive
def power(base, exp) (
  if exp == 0 then
    return 1
  else (
    if exp % 2 == 0 then (
      set half = power(base, exp / 2)
      return half * half
    ) else
      return base * power(base, exp - 1)
  )
)

# Test powers
print power(2, 10)
print power(3, 4)
print power(5, 3)
